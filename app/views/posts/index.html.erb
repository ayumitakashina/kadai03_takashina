<h1>本の紹介</h1>

<table>
  <thead>
    <tr>
      <th>タイトル</th>
      <th>価格</th>
      <th>説明</th>
      <th>評価(5段階)</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @posts.each do |post| %>
      <tr>
        <td><%= post.title %></td>
        <td><%= post.price %></td>
        <td><%= post.description %></td>
        <td><%= post.rated %></td>

        <td><%= link_to '詳細ページ', post %></td>
        <td><%= link_to '編集', edit_post_path(post) %></td>
        <td><%= link_to '削除', post, method: :delete, data: { confirm: '本当に削除しますか？' } %></td>

      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to '新規投稿', new_post_path %>